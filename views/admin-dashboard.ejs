<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/main.css" />
    <title>Admin Dashboard</title>
</head>
<body class="bg-light">
    <nav class="navbar navbar-light bg-white border-bottom">
        <div class="container-fluid">
            <h1 class="navbar-brand mb-0">Admin Dashboard</h1>
            <div>
                <span class="me-3">Welcome, <%= user.name %></span>
                <a href="/logout" class="btn btn-sm btn-outline-secondary">Logout</a>
            </div>
        </div>
    </nav>
    
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            <ul class="navbar-nav flex-row">
                <li class="nav-item me-3">
                    <a href="/admin" class="nav-link active">Dashboard</a>
                </li>
                <li class="nav-item me-3">
                    <a href="/admin/users" class="nav-link">Manage Users</a>
                </li>
                <li class="nav-item me-3">
                    <a href="/admin/events" class="nav-link">Manage Events</a>
                </li>
                <li class="nav-item me-3">
                    <a href="/organiser" class="nav-link">Create Events</a>
                </li>
                <li class="nav-item">
                    <a href="/admin/settings" class="nav-link">Site Settings</a>
                </li>
            </ul>
        </div>
    </nav>
    
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5>Users</h5>
                        <% userStats.forEach(stat => { %>
                            <p><%= stat.role.charAt(0).toUpperCase() + stat.role.slice(1) %>s: <%= stat.count %></p>
                        <% }); %>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5>Events</h5>
                        <% eventStats.forEach(stat => { %>
                            <p><%= stat.status.charAt(0).toUpperCase() + stat.status.slice(1) %>: <%= stat.count %></p>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card mt-4">
            <div class="card-body">
                <h5>Quick Actions</h5>
                <a href="/admin/users" class="btn btn-primary me-2">Manage Users</a>
                <a href="/organiser/create-event" class="btn btn-secondary me-2">Create New Event</a>
                <a href="/admin/events" class="btn btn-outline-secondary">View All Events</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>