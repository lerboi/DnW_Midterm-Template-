<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/main.css" />
    <title>Admin Dashboard</title>
</head>
<body>
    <div class="header">
        <h1>Admin Dashboard</h1>
        <div class="user-info">
            Welcome, <%= user.name %> 
            <a href="/logout" class="btn-logout">Logout</a>
        </div>
    </div>
    
    <div class="nav-menu">
        <a href="/admin" class="nav-link active">Dashboard</a>
        <a href="/admin/users" class="nav-link">Manage Users</a>
        <a href="/admin/events" class="nav-link">Manage Events</a>
        <a href="/organiser" class="nav-link">Create Events</a>
        <a href="/admin/settings" class="nav-link">Site Settings</a>
    </div>
    
    <div class="dashboard-stats">
        <div class="stat-card">
            <h3>Users by Role</h3>
            <% userStats.forEach(stat => { %>
                <p><%= stat.role.charAt(0).toUpperCase() + stat.role.slice(1) %>s: <%= stat.count %></p>
            <% }); %>
        </div>
        
        <div class="stat-card">
            <h3>Events by Status</h3>
            <% eventStats.forEach(stat => { %>
                <p><%= stat.status.charAt(0).toUpperCase() + stat.status.slice(1) %>: <%= stat.count %></p>
            <% }); %>
        </div>
    </div>
    
    <div class="quick-actions">
        <h3>Quick Actions</h3>
        <a href="/admin/users" class="btn-primary">Manage Users</a>
        <a href="/organiser/create-event" class="btn-secondary">Create New Event</a>
        <a href="/admin/events" class="btn-secondary">View All Events</a>
    </div>
</body>
</html>